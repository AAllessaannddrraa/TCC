
<h1>Dashboard</h1>

<div class="row">
  <!-- Quick Stats -->
  <div class="col-md-3">
    <div class="card text-white bg-primary mb-3">
      <div class="card-header">Usuários</div>
      <div class="card-body">
        <h5 class="card-title">50</h5>
        <p class="card-text">Usuários ativos no sistema.</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-white bg-success mb-3">
      <div class="card-header">Serviços Pendentes</div>
      <div class="card-body">
        <h5 class="card-title">10</h5>
        <p class="card-text">Serviços aguardando confirmação.</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-white bg-warning mb-3">
      <div class="card-header">Alertas</div>
      <div class="card-body">
        <h5 class="card-title">5</h5>
        <p class="card-text">Novos alertas criados hoje.</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-white bg-danger mb-3">
      <div class="card-header">Ocorrências</div>
      <div class="card-body">
        <h5 class="card-title">2</h5>
        <p class="card-text">Ocorrências urgentes no sistema.</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Calendar Section -->
  <div class="col-md-8">
    <div class="card mb-3">
      <div class="card-header">Calendário</div>
      <div class="card-body">
        <p class="card-text"><div id="calendar"></div></p>
      </div>
    </div>
  </div>

  <!-- Notifications -->
  <div class="col-md-4">
    <div class="card mb-3">
      <div class="card-header">Notificações Recentes</div>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item">Novo usuário registrado</li>
          <li class="list-group-item">Serviço pendente aguardando confirmação</li>
          <li class="list-group-item">Atualização de perfil realizada</li>
        </ul>
      </div>
    </div>
  </div>
</div>
