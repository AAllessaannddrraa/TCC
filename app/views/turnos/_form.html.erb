<%= form_with(model: @turno, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :data_inicio, "Data InÃ­cio", class: "form-label" %>
    <%= form.datetime_select :data_inicio, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data_fim, "Data Fim", class: "form-label" %>
    <%= form.datetime_select :data_fim, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, "Status", class: "form-label" %>
    <%= form.select :status, Turno.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cuidador_id, "Cuidador", class: "form-label" %>
    <%= form.collection_select :cuidador_id, Cuidador.all, :id, :nome, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :paciente_id, "Paciente", class: "form-label" %>
    <%= form.collection_select :paciente_id, Paciente.all, :id, :nome, {}, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
