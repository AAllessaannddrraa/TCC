<div class="container d-flex justify-content-center">
  <div class="jumbotron" style="width:900px; padding: 20px;">
    <h1 class="display-5 d-flex justify-content-center">Log in</h1>
    <hr class="my-4">
    <h2>Login</h2>
    <h2>Log in</h2>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |form| %>
      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
