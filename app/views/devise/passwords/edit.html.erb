<h2>Change your password</h2>

<%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |form| %>
  <%= form.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, class: "form-label" %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Change my password", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
