<h2>Forgot your password?</h2>

<%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Send me reset password instructions", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
