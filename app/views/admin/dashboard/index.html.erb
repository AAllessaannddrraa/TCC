<h1 class="text-center">Dashboard Administrativo</h1>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="card text-white bg-primary">
        <div class="card-body">
          <h5 class="card-title">Total de Solicitações</h5>
          <p class="card-text"><%= @solicitations_by_status.values.sum %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6 mb-3">
      <div class="card text-white bg-success">
        <div class="card-body">
          <h5 class="card-title">Pagamentos Processados</h5>
          <p class="card-text"><%= @processed_payments_count %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="card text-white bg-warning">
        <div class="card-body">
          <h5 class="card-title">Clientes Ativos</h5>
          <p class="card-text"><%= @active_clients_count %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6 mb-3">
      <div class="card text-white bg-danger">
        <div class="card-body">
          <h5 class="card-title">Serviços Pendentes</h5>
          <p class="card-text"><%= @pending_services_count %></p>
        </div>
      </div>
    </div>
  </div>
</div>
