<%= form_with(model: @usuario, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :nome, "Nome", class: "form-label" %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password, "Nova Senha (opcional)", class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, "Confirme a Nova Senha", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-group mt-3">
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
