<%= form_with(model: @cliente, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :nome, "Nome", class: "form-label" %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :telefone, "Telefone", class: "form-label" %>
    <%= form.text_field :telefone, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
