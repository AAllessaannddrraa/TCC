<h1>Serviços Solicitados</h1>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.nome %></td>
        <td><%= servico.descricao %></td>
        <td><%= number_to_currency(servico.preco) %></td>
        <td><%= servico.status.humanize %></td>
        <td>
          <%= link_to 'Ver', clientes_servico_path(servico) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Novo Serviço', new_clientes_servico_path, class: 'btn btn-primary' %>
