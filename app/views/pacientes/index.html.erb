<h1>Pacientes</h1>
<%= link_to "Novo Paciente", new_paciente_path, class: "btn btn-primary mb-3" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Endereço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>
        <td><%= paciente.idade %></td>
        <td><%= paciente.endereco %></td>
        <td>
          <%= link_to "Mostrar", paciente_path(paciente), class: "btn btn-sm btn-info" %>
          <%= link_to "Editar", edit_paciente_path(paciente), class: "btn btn-sm btn-warning" %>
          <%= link_to "Deletar", paciente_path(paciente), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
