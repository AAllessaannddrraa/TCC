<h1>Lista de Pacientes</h1>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Condições</th>
      <th>Estado de Saúde</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>
        <td><%= paciente.idade %></td>
        <td><%= paciente.condicoes %></td>
        <td><%= paciente.estado_saude.humanize %></td>
        <td>
          <%= link_to 'Ver', paciente_path(paciente) %>
          <%= link_to 'Editar', edit_paciente_path(paciente) if current_usuario.admin? || current_usuario.cliente? %>
          <%= link_to 'Remover', paciente_path(paciente), method: :delete, data: { confirm: 'Tem certeza?' } if current_usuario.admin? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Novo Paciente', new_paciente_path, class: 'btn btn-primary' %>
