
<%= form_with model: @cuidador, local: true do |form| %>
  <div class="form-group">
    <%= form.label :nome, "Nome do Cuidador" %>
    <%= form.text_field :nome, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :numero_contato, "Número de Contato" %>
    <%= form.text_field :numero_contato, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :habilidades, "Habilidades" %>
    <%= form.text_area :habilidades, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :disponibilidade, "Disponibilidade" %>
    <%= form.select :disponibilidade, ["Manhã", "Tarde", "Noite", "Integral"], prompt: "Selecione", class: 'form-control' %>
  </div>

  <%= form.submit "Salvar Cuidador", class: "btn btn-primary" %>
<% end %>
