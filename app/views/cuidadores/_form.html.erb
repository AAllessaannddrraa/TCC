<%= form_with(model: cuidador, local: true) do |form| %>
  <% if cuidador.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cuidador.errors.count, "erro") %> proibiu este cuidador de ser salvo:</h2>
      <ul>
        <% cuidador.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :numero_contato %>
    <%= form.text_field :numero_contato %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
