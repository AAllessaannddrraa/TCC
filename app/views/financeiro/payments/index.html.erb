<h1>Pagamentos</h1>
<%= link_to "Novo Pagamento", new_financeiro_payment_path, class: "btn btn-primary mb-3" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Valor</th>
      <th>Data</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.cliente.nome %></td>
        <td><%= number_to_currency(payment.valor) %></td>
        <td><%= payment.data %></td>
        <td><%= payment.status %></td>
        <td>
          <%= link_to "Mostrar", financeiro_payment_path(payment), class: "btn btn-sm btn-info" %>
          <%= link_to "Editar", edit_financeiro_payment_path(payment), class: "btn btn-sm btn-warning" %>
          <%= link_to "Deletar", financeiro_payment_path(payment), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
