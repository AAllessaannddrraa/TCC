<h1>Detalhes do Pagamento</h1>

<p><strong>Cliente:</strong> <%= @payment.cliente.nome %></p>
<p><strong>Valor:</strong> <%= number_to_currency(@payment.valor) %></p>
<p><strong>Data:</strong> <%= @payment.data %></p>
<p><strong>Status:</strong> <%= @payment.status %></p>

<%= link_to 'Editar', edit_financeiro_payment_path(@payment), class: 'btn btn-warning' %>
<%= link_to 'Voltar', financeiro_payments_path, class: 'btn btn-secondary' %>
<%= link_to 'Deletar', financeiro_payment_path(@payment), method: :delete, class: 'btn btn-danger', data: { confirm: "Tem certeza?" } %>
