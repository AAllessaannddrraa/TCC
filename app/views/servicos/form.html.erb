<%= form_with(model: @servico, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :descricao %>
    <%= form.text_area :descricao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :preco %>
    <%= form.number_field :preco, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :tipo_servico_id, 'Tipo de ServiÃ§o' %>
    <%= form.collection_select :tipo_servico_id, TipoServico.all, :id, :nome, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Servico.statuses.keys.map { |status| [status.humanize, status] }, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :data_agendamento %>
    <%= form.date_field :data_agendamento, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
